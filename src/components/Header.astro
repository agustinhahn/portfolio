<header id="nav" class="flex flex-col items-center py-5 w-full xl:w-[1120px] mx-auto navstyle">
  <!-- Botón de menú hamburguesa en móviles -->
  <div class="flex items-center sm:hidden">
    <button
      id="menu-toggle"
      type="button"
      class="text-gray-500 hover:text-yellow-200/90 focus:outline-none transition-colors"
    >
      <!-- Icono de menú cerrado -->
      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Navegación para pantallas grandes -->
  <nav class="hidden sm:flex flex-row gap-x-10 opacity-80">
    <a class="transition-colors hover:text-yellow-200/90" href="/">Inicio</a>
    <a class="transition-colors hover:text-yellow-200/90" href="#proyectos">Proyectos</a>
    <a class="transition-colors hover:text-yellow-200/90" href="#experiencia">Experiencia</a>
    <a class="transition-colors hover:text-yellow-200/90" href="#about">Sobre mí</a>
  </nav>

  <!-- Navegación desplegable para pantallas móviles -->
  <div
    id="mobile-menu"
    class="hidden flex-col items-center w-full mt-4 sm:hidden transition-all duration-300 ease-in-out transform opacity-0 scale-95"
  >
    <a class="block py-2 transition-colors hover:text-yellow-200/90" href="/">Inicio</a>
    <a class="block py-2 transition-colors hover:text-yellow-200/90" href="#proyectos">Proyectos</a>
    <a class="block py-2 transition-colors hover:text-yellow-200/90" href="#experiencia">Experiencia</a>
    <a class="block py-2 transition-colors hover:text-yellow-200/90" href="#about">Sobre mí</a>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");

    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");

        // Agrega animaciones adicionales
        if (!mobileMenu.classList.contains("hidden")) {
          mobileMenu.classList.remove("opacity-0", "scale-95");
          mobileMenu.classList.add("opacity-100", "scale-100");
        } else {
          mobileMenu.classList.remove("opacity-100", "scale-100");
          mobileMenu.classList.add("opacity-0", "scale-95");
        }
      });
    }
  });
</script>

<style>
  #nav {
    justify-content: center;
    align-items: center;
  }

  /* Estilos para el menú móvil */
  #mobile-menu a {
    text-align: center;
    font-size: 1rem;
    color: #fff; /* Color del texto */
  }

  #mobile-menu a:hover {
    color: #facc15; /* Hover amarillo */
  }

  /* Transición suave */
  #mobile-menu {
    transition: all 0.5s ease-in-out;
  }

  /* Alineación de ítems */
  @media (min-width: 640px) {
    #nav {
      flex-direction: row;
    }
  }
</style>
