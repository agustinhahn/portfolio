<button id="btn-subir" class="Btn" aria-label="Volver arriba">
  <svg height="1.2em" class="arrow" viewBox="0 0 512 512"><path d="M233.4 105.4c12.5-12.5 32.8-12.5 45.3 0l192 192c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L256 173.3 86.6 342.6c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3l192-192z"></path></svg>
  <p class="text">Subir</p>
</button>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btnSubir = document.getElementById("btn-subir");

    if (btnSubir) {
      // Ocultar al inicio, opcional pero queda bien. Vamos a dejarlo siempre visible por simplicidad si el usuario no pidiÃ³ ocultarlo.
      
      btnSubir.addEventListener("click", () => {
        window.scrollTo({
          top: 0,
          behavior: "smooth",
        });
      });
    }
  });
</script>

<style>
    /* From Uiverse.io by vinodjangid07 */ 
.Btn {
  width: 45px;
  height: 45px;
  background: linear-gradient(rgb(252 233 106 / 0.9), #212222);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  cursor: pointer;
  position: fixed;
  border: none;
  bottom: 30px;
  right: 20px;

}

.arrow path {
  fill: white;
}

.text {
  font-size: 0.8em;
  width: 100px;
  position: absolute;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: -18px;
  opacity: 0;
  transition: all 0.7s ease-in-out;
}

.Btn:hover .text {
  opacity: 1;
  transition: all 0.7s ease-in-out;
}

.Btn:hover .arrow {
  animation: slide-in-bottom .7s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
}

@keyframes slide-in-bottom {
  0% {
    transform: translateY(10px);
    opacity: 0;
  }

  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

</style>