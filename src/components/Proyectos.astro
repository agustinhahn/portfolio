---
import NetxIcon from "../icons/NextIcon.astro"
import TailwindIcon from "../icons/TailwindIcon.astro"
const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-black text-white",
        icon: NetxIcon
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: TailwindIcon
    },
};

const PROJECTS = [
    {
        title: "portfolio",
        description:
            "A simple weather application that displays the current weather based on the user's location.",
        link: "https://example.com/weather-app",
        github: "https://github.com/yourusername/weather-app",
        image: "../public/portfolio.webp",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
    },
    // {
    //     title: "Personal Blog",
    //     description:
    //         "A personal blog website built with Astro for static site generation.",
    //     link: "https://example.com/personal-blog",
    //     github: "https://github.com/yourusername/personal-blog",
    //     image: "https://via.placeholder.com/300x200",
    //     tags: ["Astro", "JavaScript", "HTML", "CSS"],
    // },
    // {
    //     title: "Todo App",
    //     description:
    //         "A simple todo list application built with React for managing tasks.",
    //     link: "https://example.com/todo-app",
    //     github: "https://github.com/yourusername/todo-app",
    //     image: "https://via.placeholder.com/300x200",
    //     tags: ["React", "JavaScript", "CSS"],
    // },
];
---

{
    PROJECTS.map(({ title, description, tags, image }) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-4 flex-row">
                {tags.map((tag) => (
                    <li>    
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4" />
                            {tag.name}    
                        </span>
                        
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10"
                src={image}
                alt={`captura de pantalla del proyecto ${title}`}
            />
        </article>
    ))
}
