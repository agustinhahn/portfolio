---
import NetxIcon from "../icons/NextIcon.astro"
import TailwindIcon from "../icons/TailwindIcon.astro"
import ButtonVerMas from "./ButtonVerMas"

const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-black text-white",
        icon: NetxIcon
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: TailwindIcon
    },
};

const PROJECTS = [
    {
        idItem: 1,
        title: "portfolio",
        description:
            "A simple weather application that displays the current weather based on the user's location.",
        link: "https://example.com/weather-app",
        github: "https://github.com/yourusername/weather-app",
        image: "https://via.placeholder.com/300x200",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
    },
    {
        idItem: 2,
        title: "Personal Blog",
        description:
            "A personal blog website built with Astro for static site generation.",
        link: "https://example.com/personal-blog",
        github: "https://github.com/yourusername/personal-blog",
        image: "https://via.placeholder.com/300x200",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
    },
    {
        idItem: 3,
        title: "Todo App",
        description:
            "A simple todo list application built with React for managing tasks.",
        link: "https://example.com/todo-app",
        github: "https://github.com/yourusername/todo-app",
        image: "https://via.placeholder.com/300x200",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
    },
];

---

{
    PROJECTS.map(({ title, description, tags, image, idItem }) => (
        <article class="w-80 mb-8">
            <div class="flex">
                <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            </div>
            <p class="text-md mb-4 text-pretty h-16">{description}</p>
            <ul class="flex gap-x-4 flex-row">
                {tags.map((tag) => (
                    <li>    
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 mb-5`}>
                            <tag.icon class="size-4" />
                            {tag.name}    
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10"
                src={image}
                alt={`captura de pantalla del proyecto ${title}`}
            />
        </article>
    ))
}