---
const CORE_TECH = [
  { name: "React", icon: "/react.svg" },
  { name: "Node.js", icon: "/node.svg" },
  { name: "Docker", icon: "/docker.svg" },
  { name: "PostgreSQL", icon: "/postgresql.svg" },
  { name: "MongoDB", icon: "/mongodb.svg" }
];

const HYBRID_PROFILE = [
  "Redes informáticas",
  "Mikrotik (MTCNA)",
  "CCNA",
  "Linux",
  "Bases de datos",
  "Virtual Machines"
];
---

<section class="mt-16 mb-8 w-full">
  <h2 class="text-4xl font-semibold mb-8 flex gap-x-3 items-center transition-all duration-300 hover:text-white hover:drop-shadow-[0_0_10px_rgba(255,255,255,1)] hover:scale-105 origin-left w-fit cursor-default">
    <!-- Usando un icono genérico de código/stack, similar a los otros títulos -->
    <svg class="size-7" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg>
    Mi Stack tecnologico
  </h2>

  <!-- Core Technologies -->
  <div class="mb-12">
    <h3 class="text-2xl font-medium text-yellow-200 mb-6 transition-all duration-300 hover:scale-105 origin-left w-fit cursor-default">Tecnologías dev</h3>
    <div class="flex flex-wrap gap-4 justify-center md:justify-start">
      {CORE_TECH.map((tech) => (
        <div class="flex flex-col items-center justify-center p-4 bg-white/5 border border-white/10 rounded-xl hover:bg-white/10 transition-all duration-300 transform hover:scale-105 min-w-[120px]">
          <img src={tech.icon} alt={tech.name} class="w-12 h-12 mb-3" />
          <span class="text-sm font-semibold">{tech.name}</span>
        </div>
      ))}
    </div>
  </div>

  <!-- Hybrid Profile -->
  <div>
    <h3 class="text-2xl font-medium text-yellow-200 mb-6">Perfil informatico</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      {HYBRID_PROFILE.map((item) => (
        <div class="flex items-center gap-3 p-4 bg-white/5 border border-white/10 rounded-lg hover:border-yellow-200/50 hover:bg-white/10 transition-colors">
          <svg class="size-5 text-yellow-200" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
          <span class="font-medium text-[15px]">{item}</span>
        </div>
      ))}
    </div>
  </div>
</section>
